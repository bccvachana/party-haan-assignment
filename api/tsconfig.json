{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noLib": false,
    "noUnusedLocals": true,
    "paths": {
      "_*": [
        "./*"
      ],
    },
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "exclude": [
    "node_modules"
  ]
}